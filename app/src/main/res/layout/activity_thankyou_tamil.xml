<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp"
    tools:context=".ThankyouTamil">

    <ImageView
        android:id="@+id/image_last2"
        android:layout_width="90dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/logo" />


    <TextView
        android:id="@+id/text_last2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thank you"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_last12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_last22"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        android:text="Seesha Karunya Community Hospital"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/text_last22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Feedback Form"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

</RelativeLayout>